<h1><%= @company.name %></h1>

<p>Location: <%= "#{@company.city}, #{@company.state}" %></p>
<ul>
    <% for contact in @company.contacts %>
        <li>
            <%= "#{contact.first_name} #{contact.last_name}"%>
        </li>
    <% end %>
</ul>

<a href="/contacts/new?company_id=<%= @company.id %>">New contact</a>
