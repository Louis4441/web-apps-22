<h1>New Post</h1>

<%= form_with model: @post do |form| %>
  <p>
    <%= form.label "author", "Username" %>
    <%= form.text_field "author" %>
  </p>
  <p>
    <%= form.label "body" %>
    <%= form.text_field "body" %>
</p>
<p>
    <%= form.label "image" %>
    <%= form.text_field "image" %>
  </p>
  <%= form.submit %>
<% end %>

<a href="/posts">Take me back to home!</a>